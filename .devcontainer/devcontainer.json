{
    "image": "mcr.microsoft.com/devcontainers/miniconda:0-3",
    "name": "whisper",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-toolsai.jupyter"
            ],
            "python.defaultInterpreterPath": "/opt/conda/bin/python3.10"
        }
    },
    "features": {
        "ghcr.io/devcontainers-contrib/features/ffmpeg-apt-get:1": {}
    },
    "onCreateCommand": "conda init bash && sudo cp .devcontainer/first-run-notice.txt /usr/local/etc/vscode-dev-containers/first-run-notice.txt",
    "postCreateCommand": "/opt/conda/bin/python -m pip install .[dev]"
}